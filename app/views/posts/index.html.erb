<% provide(:title, "Posts") %></br>
<%= form_tag posts_path, method: :get do %>
  <div class="field row">
    <div class="col-sm-10">
      <%= text_field_tag :search, params[:search], class: "form-group form-control"%>
    </div>
    <div class="col-sm-2">
      <%= submit_tag "Search", class: "btn btn-primary" %>
    </div>
  </div> 
<% end %>
<ol class="posts">
<%= render @posts %>
</ol>
<%= will_paginate @posts %>
